<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_marginTop="4dp" android:layout_marginBottom="12dp"
    android:padding="8dp">

    <android.support.constraint.Guideline
        android:id="@+id/guide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.333" />

    <android.support.constraint.Guideline
        android:id="@+id/guide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.666" />

    <android.support.constraint.Guideline
        android:id="@+id/guide3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.333" />

    <android.support.constraint.Guideline
        android:id="@+id/guide4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.666" />

    <View
        android:layout_width="match_parent" android:layout_height="2dp"
        app:layout_constraintTop_toTopOf="@+id/guide3"
        app:layout_constraintBottom_toBottomOf="@+id/guide3"
        android:background="@color/colorPrimary"  />

    <View
        android:layout_width="match_parent" android:layout_height="2dp"
        app:layout_constraintTop_toTopOf="@+id/guide4"
        app:layout_constraintBottom_toBottomOf="@+id/guide4"
        android:background="@color/colorPrimary" />

    <View
        android:layout_width="2dp" android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="@+id/guide1"
        app:layout_constraintEnd_toEndOf="@+id/guide1"
        android:background="@color/colorPrimary"  />

    <View
        android:layout_width="2dp" android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="@+id/guide2"
        app:layout_constraintEnd_toEndOf="@+id/guide2"
        android:background="@color/colorPrimary"  />

    <!-- One -->
    <LinearLayout
        android:id="@+id/grid1"
        android:layout_width="0dp" android:layout_height="0dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guide1"
        app:layout_constraintBottom_toBottomOf="@+id/guide3">

        <include layout="@layout/layout_grid_item0" />

    </LinearLayout>

    <!-- Two -->
    <LinearLayout
        android:id="@+id/grid2"
        android:layout_width="0dp" android:layout_height="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true" android:focusable="true"
        app:layout_constraintStart_toStartOf="@+id/guide1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guide2"
        app:layout_constraintBottom_toBottomOf="@+id/guide3">

        <include layout="@layout/layout_grid_item0" />

    </LinearLayout>

    <!-- Three -->
    <LinearLayout
        android:id="@+id/grid3"
        android:layout_width="0dp" android:layout_height="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true" android:focusable="true"
        app:layout_constraintStart_toStartOf="@+id/guide2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/guide3">

        <include layout="@layout/layout_grid_item0" />

    </LinearLayout>

    <!-- Four -->
    <LinearLayout
        android:id="@+id/grid4"
        android:layout_width="0dp" android:layout_height="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true" android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guide3"
        app:layout_constraintEnd_toEndOf="@id/guide1"
        app:layout_constraintBottom_toBottomOf="@+id/guide4">

        <include layout="@layout/layout_grid_item0" />

    </LinearLayout>

    <!-- Five -->
    <LinearLayout
        android:id="@+id/grid5"
        android:layout_width="0dp" android:layout_height="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true" android:focusable="true"
        app:layout_constraintStart_toStartOf="@+id/guide1"
        app:layout_constraintTop_toTopOf="@+id/guide3"
        app:layout_constraintEnd_toEndOf="@id/guide2"
        app:layout_constraintBottom_toBottomOf="@+id/guide4">

        <include layout="@layout/layout_grid_item0" />

    </LinearLayout>

    <!-- Six -->
    <LinearLayout
        android:id="@+id/grid6"
        android:layout_width="0dp" android:layout_height="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true" android:focusable="true"
        app:layout_constraintStart_toStartOf="@+id/guide2"
        app:layout_constraintTop_toTopOf="@+id/guide3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/guide4">

        <include layout="@layout/layout_grid_item0" />

    </LinearLayout>

    <!-- Seven -->
    <LinearLayout
        android:id="@+id/grid7"
        android:layout_width="0dp" android:layout_height="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true" android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guide4"
        app:layout_constraintEnd_toEndOf="@id/guide1"
        app:layout_constraintBottom_toBottomOf="parent">

        <include layout="@layout/layout_grid_item0" />

    </LinearLayout>

    <!-- Eight -->
    <LinearLayout
        android:id="@+id/grid8"
        android:layout_width="0dp" android:layout_height="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true" android:focusable="true"
        app:layout_constraintStart_toStartOf="@+id/guide1"
        app:layout_constraintTop_toTopOf="@+id/guide4"
        app:layout_constraintEnd_toEndOf="@+id/guide2"
        app:layout_constraintBottom_toBottomOf="parent">

        <include layout="@layout/layout_grid_item0" />

    </LinearLayout>

    <!-- Nine -->
    <LinearLayout
        android:id="@+id/grid9"
        android:layout_width="0dp" android:layout_height="0dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintStart_toStartOf="@+id/guide2"
        app:layout_constraintTop_toTopOf="@+id/guide4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <include layout="@layout/layout_grid_item0" />

    </LinearLayout>


    <TextView
        android:id="@+id/guide1_label"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/colorPrimary"
        android:padding="4dp" android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guide1"
        tools:text="-112.15" />

    <TextView
        android:id="@+id/guide2_label"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/colorPrimary"
        android:padding="4dp" android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guide2"
        tools:text="-112" />

    <TextView
        android:id="@+id/guide3_label"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/colorPrimary"
        android:padding="8dp" android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guide3"
        tools:text="35.15" />

    <TextView
        android:id="@+id/guide4_label"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/colorPrimary"
        android:padding="8dp" android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/guide4"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="35" />


</android.support.constraint.ConstraintLayout>