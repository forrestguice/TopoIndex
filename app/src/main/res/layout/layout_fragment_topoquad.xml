<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/guide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.333" />

    <android.support.constraint.Guideline
        android:id="@+id/guide2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.666" />

    <android.support.constraint.Guideline
        android:id="@+id/guide3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.333" />

    <android.support.constraint.Guideline
        android:id="@+id/guide4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.666" />

    <!-- One -->
    <FrameLayout
        android:id="@+id/grid1"
        android:layout_width="0dp" android:layout_height="0dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guide1"
        app:layout_constraintBottom_toBottomOf="@+id/guide3">

        <include layout="@layout/layout_grid_item0" />

    </FrameLayout>

    <!-- Two -->
    <FrameLayout
        android:id="@+id/grid2"
        android:layout_width="0dp" android:layout_height="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true" android:focusable="true"
        app:layout_constraintStart_toStartOf="@+id/guide1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guide2"
        app:layout_constraintBottom_toBottomOf="@+id/guide3">

        <include layout="@layout/layout_grid_item0" />

    </FrameLayout>

    <!-- Three -->
    <FrameLayout
        android:id="@+id/grid3"
        android:layout_width="0dp" android:layout_height="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true" android:focusable="true"
        app:layout_constraintStart_toStartOf="@+id/guide2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/guide3">

        <include layout="@layout/layout_grid_item0" />

    </FrameLayout>

    <!-- Four -->
    <FrameLayout
        android:id="@+id/grid4"
        android:layout_width="0dp" android:layout_height="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true" android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guide3"
        app:layout_constraintEnd_toEndOf="@id/guide1"
        app:layout_constraintBottom_toBottomOf="@+id/guide4">

        <include layout="@layout/layout_grid_item0" />

    </FrameLayout>

    <!-- Five -->
    <FrameLayout
        android:id="@+id/grid5"
        android:layout_width="0dp" android:layout_height="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true" android:focusable="true"
        app:layout_constraintStart_toStartOf="@+id/guide1"
        app:layout_constraintTop_toTopOf="@+id/guide3"
        app:layout_constraintEnd_toEndOf="@id/guide2"
        app:layout_constraintBottom_toBottomOf="@+id/guide4">

        <include layout="@layout/layout_grid_item0" />

    </FrameLayout>

    <!-- Six -->
    <FrameLayout
        android:id="@+id/grid6"
        android:layout_width="0dp" android:layout_height="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true" android:focusable="true"
        app:layout_constraintStart_toStartOf="@+id/guide2"
        app:layout_constraintTop_toTopOf="@+id/guide3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/guide4">

        <include layout="@layout/layout_grid_item0" />

    </FrameLayout>

    <!-- Seven -->
    <FrameLayout
        android:id="@+id/grid7"
        android:layout_width="0dp" android:layout_height="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true" android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guide4"
        app:layout_constraintEnd_toEndOf="@id/guide1"
        app:layout_constraintBottom_toBottomOf="parent">

        <include layout="@layout/layout_grid_item0" />

    </FrameLayout>

    <!-- Eight -->
    <FrameLayout
        android:id="@+id/grid8"
        android:layout_width="0dp" android:layout_height="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true" android:focusable="true"
        app:layout_constraintStart_toStartOf="@+id/guide1"
        app:layout_constraintTop_toTopOf="@+id/guide4"
        app:layout_constraintEnd_toEndOf="@+id/guide2"
        app:layout_constraintBottom_toBottomOf="parent">

        <include layout="@layout/layout_grid_item0" />

    </FrameLayout>

    <!-- Nine -->
    <FrameLayout
        android:id="@+id/grid9"
        android:layout_width="0dp" android:layout_height="0dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintStart_toStartOf="@+id/guide2"
        app:layout_constraintTop_toTopOf="@+id/guide4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <include layout="@layout/layout_grid_item0" />

    </FrameLayout>

    <View
        android:layout_width="match_parent" android:layout_height="2dp"
        app:layout_constraintTop_toTopOf="@+id/guide3"
        app:layout_constraintBottom_toBottomOf="@+id/guide3"
        android:background="?attr/gridAxisColor"  />

    <View
        android:layout_width="match_parent" android:layout_height="2dp"
        app:layout_constraintTop_toTopOf="@+id/guide4"
        app:layout_constraintBottom_toBottomOf="@+id/guide4"
        android:background="?attr/gridAxisColor" />

    <View
        android:layout_width="2dp" android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="@+id/guide1"
        app:layout_constraintEnd_toEndOf="@+id/guide1"
        android:background="?attr/gridAxisColor"  />

    <View
        android:layout_width="2dp" android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="@+id/guide2"
        app:layout_constraintEnd_toEndOf="@+id/guide2"
        android:background="?attr/gridAxisColor"  />

    <TextView
        android:id="@+id/guide1_label"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Small"
        android:textColor="?attr/gridLabelColor"
        android:paddingTop="12dp" android:paddingStart="6dp" android:paddingEnd="6dp"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guide1"
        tools:text="-112.15" />

    <TextView
        android:id="@+id/guide2_label"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Small"
        android:textColor="?attr/gridLabelColor"
        android:textSize="12sp"
        android:paddingTop="12dp" android:paddingStart="6dp" android:paddingEnd="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guide2"
        tools:text="-112" />

    <TextView
        android:id="@+id/guide3_label"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Small"
        android:textColor="?attr/gridLabelColor"
        android:layout_margin="2dp" android:paddingStart="8dp" android:paddingEnd="8dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guide3"
        tools:text="35.15" />

    <TextView
        android:id="@+id/guide4_label"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Small"
        android:textColor="?attr/gridLabelColor"
        android:layout_margin="2dp" android:paddingStart="8dp" android:paddingEnd="8dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/guide4"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="35" />


    <LinearLayout
        android:id="@+id/footer_maps_layout"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:animateLayoutChanges="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="?attr/primaryDarkColor">

        <ImageView
            android:layout_width="24dp" android:layout_height="24dp"
            android:layout_gravity="center_vertical" android:layout_marginRight="4dp" android:layout_marginLeft="4dp"
            app:srcCompat="@drawable/ic_menu_maps" />

        <TextView
            android:id="@+id/filterdesc_misc"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:textColor="?attr/secondaryDarkTextColor"
            android:paddingTop="6dp" android:paddingBottom="6dp" android:paddingStart="8dp" android:paddingEnd="8dp"
            android:layout_gravity="center" android:elevation="5dp"
            tools:text="Filter by ..." />

        <TextView
            android:id="@+id/filterdesc_scale"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textColor="?attr/secondaryDarkTextColor"
            android:paddingTop="6dp" android:paddingBottom="6dp" android:paddingStart="8dp" android:paddingEnd="8dp"
            android:layout_gravity="center_vertical|end" android:elevation="5dp"
            tools:text="24K" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>