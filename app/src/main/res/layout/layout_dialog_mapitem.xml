<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="4dp" android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/mapItem_name"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            tools:text="series" />

        <TextView
            android:id="@+id/mapItem_series"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            tools:text="series" />

        <TextView
            android:id="@+id/mapItem_date"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            tools:text="date" />

        <TextView
            android:id="@+id/mapItem_state"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            tools:text="state" />

        <TextView
            android:id="@+id/mapItem_scale"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            tools:text="scale" />

        <TextView
            android:id="@+id/mapItem_nwcorner"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            tools:text="nwcorner" />

        <TextView
            android:id="@+id/mapItem_secorner"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            tools:text="nwcorner" />

        <TextView
            android:id="@+id/mapItem_scanid"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            tools:text="scanid" />

        <TextView
            android:id="@+id/mapItem_cellid"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            tools:text="cellid" />

        <TextView
            android:id="@+id/mapItem_gdaitemid"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            tools:text="gda item id" />

        <Button
            android:id="@+id/view_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_view" />


    </LinearLayout>
</ScrollView>