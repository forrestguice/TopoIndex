<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ViewFlipper
        android:id="@+id/flipper_maps"
        android:layout_width="match_parent" android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent" android:layout_height="match_parent">

            <View
                android:id="@+id/title_maps_background" android:visibility="gone"
                android:layout_width="46dp" android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/title_maps"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:gravity="top" android:rotation="270" android:pivotY="50%"
                android:textStyle="bold" android:textSize="18sp"
                android:padding="0dp" android:layout_gravity="center" android:elevation="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ListView
                android:id="@+id/list_maps"
                android:layout_width="0dp" android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@+id/title_maps_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent" android:layout_height="match_parent">

            <GridView
                android:id="@+id/grid_maps"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.constraint.ConstraintLayout>

    </ViewFlipper>

    <ProgressBar
        android:id="@+id/progress_list_maps"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:visibility="gone" android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/guideline_hmid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_hmid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".5"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/list_maps_empty"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="vertical" android:visibility="gone"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/map_list_empty" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>