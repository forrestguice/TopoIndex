<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/txt_about_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/app_name"
            android:gravity="center"

            android:drawablePadding="10dp"
            android:textColor="@drawable/btn_text_dark"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/txt_about_desc"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/app_shortdesc" />

        <TextView
            android:id="@+id/txt_about_version"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_gravity="start"
            android:text="@string/app_version"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <TextView
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/txt_about_support"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/app_support_url" />

        <TextView
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="2dp"
            android:id="@+id/txt_about_legal1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/app_legal1"
            android:autoLink="web" />

        <TextView
            android:id="@+id/txt_about_url"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="0dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/app_url"
            android:autoLink="web" />

        <TextView
            android:id="@+id/txt_about_legal2"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:text="@string/app_legal2" />

        <TextView
            android:id="@+id/txt_about_legal3"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:text="@string/app_legal3"
            android:autoLink="web" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp" android:background="?attr/hrColor" android:layout_marginTop="4dp" android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/txt_about_legal4"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            tools:text="Privacy:"
            android:autoLink="web" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp" android:background="?attr/hrColor" android:layout_marginTop="4dp" android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/txt_about_legal5"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/privacy_url"
            android:autoLink="web" />

    </LinearLayout>
</ScrollView>